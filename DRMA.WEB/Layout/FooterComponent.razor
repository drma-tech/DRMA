@inherits ComponentCore<FooterComponent>

@if ((Support && Breakpoint <= Breakpoint.Sm) || (!Support && Breakpoint > Breakpoint.Sm))
{
    <MudDivider Class="mb-3 mt-10"></MudDivider>
    <MudGrid Justify="Justify.Center" Style="overflow: auto;" Spacing="4">
        <MudItem xs="12" sm="12" md="3">
            <MudList T="string" Color="Color.Surface" Dense="true">
                <MudListSubheader>
                    <MudText Color="Color.Primary" Typo="Typo.subtitle1">
                        DRMA Tech
                    </MudText>
                </MudListSubheader>
                <MudListItem Style="text-align: justify" Class="py-0">
                    We create smart tools that use matching systems to connect people with what fits them best — making decisions easier, more aligned, and built around who they truly are.
                </MudListItem>
                <MudListItem Style="text-align: justify" Class="py-0">
                    @AppStateStatic.Version
                </MudListItem>
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true">
                <MudListSubheader>
                    <MudText Color="Color.Secondary">
                        Company
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="About us" Href="/support/about-us" Class="py-0" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true">
                <MudListSubheader>
                    <MudText Color="Color.Secondary">
                        Product
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Streaming Discovery" Href="https://www.streamingdiscovery.com/" Dense="true" Target="_blank" />
                <MudListItem Text="Modern Matchmaker" Href="https://www.modern-matchmaker.com/" Dense="true" Target="_blank" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true">
                <MudListSubheader>
                    <MudText Color="Color.Secondary">
                        Support
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Contact" Href="mailto:contact@drma-tech.com" Class="py-0" />
            </MudList>
        </MudItem>
    </MudGrid>
}

@code {
    [Parameter] public bool Support { get; set; }
}
