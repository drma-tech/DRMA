@page "/"
@page "/index"
<SeoHeader Title="Home" Url="/" Keywords="@([])"
           Description="We create digital solutions that help people manage and optimize different aspects of their lives. Our focus is on building tools that simplify everyday decisions, enhance personal growth, and support long-term goals."></SeoHeader>
@inherits PageCore<Index>

<MudContainer>
    <MudGrid Spacing="@Css.SpaceSmall" Class="mb-20" Style="align-items: center;">
        <MudItem xs="12" sm="6" Style="text-align: center;">
            <MudPaper Elevation="2" Class="ma-8 pa-8">
                <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-2">
                    DRMA Tech
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Justify">
                    We create smart tools that use matching systems to connect people with what fits them best — making decisions easier, more aligned, and built around who they truly are.
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" Style="text-align: center;">
            <MudImage Src="icon/icon-full.png" Alt="DRMA Tech" Style="width: 50%;" />
        </MudItem>
    </MudGrid>

    <MudText Typo="Typo.h5" Color="Color.Primary">
        Our Products
    </MudText>
    <MudDivider Class="mb-10"></MudDivider>
    <MudGrid Spacing="@Css.SpaceLarge" Class="mb-20">
        <MudItem xs="12" sm="4" Style="align-content: center;">
            <MudText Typo="Typo.h6" Color="Color.Secondary" Align="Align.Center" Class="mb-2">
                Take Charge of Every Aspect of Your Life
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Justify" Style="line-height: 1.6;">
                At DRMA Tech, we build apps that help you make smarter choices by matching you with what truly fits — whether it's a person, place, or job. Our tools reduce guesswork and bring clarity by aligning with your values, lifestyle, and goals.
            </MudText>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudPaper Elevation="2" Class="mb-10 pa-4">
                <div class="d-flex mb-2">
                    <MudImage Src="logos/sd.png" Height="50" Class="me-2"></MudImage>
                    <MudText Typo="Typo.h6" Color="Color.Secondary" Style="align-content: center;">
                        Streaming Discovery
                    </MudText>
                </div>
                <div>
                    <MudLink Href="https://www.streamingdiscovery.com/" Target="_blank" Underline="Underline.Always">
                        www.streamingdiscovery.com
                    </MudLink>
                </div>
                <MudText Typo="Typo.body2" Align="Align.Justify" Style="line-height: 1.6;">
                    Manage all your streaming content in one place. Track your watch progress, organize platforms, and explore curated lists with award-winning films, critic favorites, and hidden gems.
                </MudText>
                <MudAlert Variant="Variant.Outlined" Severity="Severity.Info" Dense="true" Class="mt-3">
                    In operation since 2021
                </MudAlert>
            </MudPaper>
            <MudPaper Elevation="2" Class="mb-10 pa-4">
                <div class="d-flex mb-2">
                    <MudImage Src="logos/ns.png" Height="50" Class="me-2"></MudImage>
                    <MudText Typo="Typo.h6" Color="Color.Secondary" Style="align-content: center;">
                        My Next Spot
                    </MudText>
                </div>
                <div>
                    <MudLink Href="https://www.my-next-spot.com/" Target="_blank" Underline="Underline.Always">
                        www.my-next-spot.com
                    </MudLink>
                </div>
                <MudText Typo="Typo.body2" Align="Align.Justify" Style="line-height: 1.6;">
                    Explore countries and cities, learn interesting facts, and create your profile to find destinations that match your lifestyle, whether for a trip or a new home.
                </MudText>
                <MudAlert Variant="Variant.Outlined" Severity="Severity.Success" Dense="true" Class="mt-3">
                    App launched in February 2026
                </MudAlert>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudPaper Elevation="2" Class="mb-10 pa-4">
                <div class="d-flex mb-2">
                    <MudImage Src="logos/mm.png" Height="50" Class="me-2"></MudImage>
                    <MudText Typo="Typo.h6" Color="Color.Secondary" Style="align-content: center;">
                        Modern Matchmaker
                    </MudText>
                </div>
                <div>
                    <MudLink Href="https://www.modern-matchmaker.com/" Target="_blank" Underline="Underline.Always">
                        www.modern-matchmaker.com
                    </MudLink>
                </div>
                <MudText Typo="Typo.body2" Align="Align.Justify" Style="line-height: 1.6;">
                    Redefining how people connect. Our advanced compatibility system helps you find someone truly aligned with your values, faster and more affordably than traditional matchmaking.
                </MudText>
                <MudAlert Variant="Variant.Outlined" Severity="Severity.Success" Dense="true" Class="mt-3">
                    App launched in September 2025
                </MudAlert>
            </MudPaper>
            <MudPaper Elevation="2" Class="mb-10 pa-4">
                <div class="d-flex mb-2">
                    <MudIcon Icon="@Icons.Material.Filled.Work" Color="Color.Secondary" Class="me-2" Style="height: 50px; width: 50px;"></MudIcon>
                    <MudText Typo="Typo.h6" Color="Color.Secondary" Style="align-content: center;">
                        Jobs
                    </MudText>
                </div>
                <MudAlert Variant="Variant.Outlined" Severity="Severity.Normal" Dense="true" Class="mt-3">
                    Coming soon
                </MudAlert>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
